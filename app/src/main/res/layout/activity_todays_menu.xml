<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.trydevs.sundar.walletoscreens.Activities.TodaysMenu">

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar" />

    <in.trydevs.sundar.walletoscreens.tabs.SlidingTabLayout
        android:id="@+id/tab_layout_todays_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_todays_menu"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_background"
            android:gravity="center"
            android:text="4"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/_4dp"
            android:paddingRight="@dimen/_4dp"
            android:text="@string/RsSymbol"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="595"
            android:textAppearance="?android:textAppearanceLarge" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="4"
            android:background="@color/button_background"
            android:onClick="startActivityReviewOrder"
            android:text="Checkout ->"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
